<div class="contrainer">
  <div class="row">
    <div class="col">

    </div>

    <div class="col text-center">
<h2>Zarejestruj się</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

    <div class="field">
    <%= f.label :name, 'Imię' %><br />
    <%= f.text_field :name%>
  </div>

    <div class="field">
    <%= f.label :surname, 'Nazwisko' %><br />
    <%= f.text_field :surname%>
  </div>

    <div class="field">
    <%= f.label :nick, 'Nick' %><br />
    <%= f.text_field :nick%>
  </div>

  <div class="field">
    <%= f.label :password, 'Hasło' %>
    <% if @minimum_password_length %>
    <em>(Minimum <%= @minimum_password_length %> znaków)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,'Potwierdź hasło' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Zarejestruj", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
    <div class="col">
    </div>
  </div>
</contrainer>
